<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <title>My First Parcel App</title>
    <link rel="stylesheet" href="./style.css" />
    <script type="module" src="./app.js"></script>
  </head>
  <body>
    <div class="container mx-auto p-20">
      <div data-controller="theme-generator">
        <h1 class="text-cyan-300 text-4xl text-center">Custom Wordle Themes</h1>
        <div class="flex flex-col lg:flex-row justify-center">
          <div class="px-10 lg:w-72 space-y-4">
            <div class="border border-gray-300 rounded-lg p-2">
              <label for="miss">Miss üü®</label>
              <select class="w-full" id="miss" data-controller="emoji-picker" data-action="theme-generator#change" data-theme-generator-target="miss" data-emoji-picker-target="input" data-selected-emoji="ü§è">
                <% emojis do |emoji| %>
                  <option value="<%=emoji.emoji%>"><%=emoji.display_name%></option>
                <% end %>
              </select>
            </div>
            <div class="border border-gray-300 rounded-lg p-2">
              <label for="wrong">Wrong ‚¨õÔ∏è</label>
              <select class="w-full" id="wrong" data-controller="emoji-picker" data-action="theme-generator#change" data-theme-generator-target="wrong" data-emoji-picker-target="input" data-selected-emoji="‚ùå">
                <% emojis do |emoji| %>
                  <option value="<%=emoji.emoji%>"><%=emoji.display_name%></option>
                <% end %>
              </select>
            </div>
            <div class="border border-gray-300 rounded-lg p-2">
              <label for="hit">Hit üü©</label>
              <select class="w-full" id="hit" data-controller="emoji-picker" data-action="theme-generator#change" data-theme-generator-target="hit" data-emoji-picker-target="input" data-selected-emoji="‚úÖ">
                <% emojis do |emoji| %>
                  <option value="<%=emoji.emoji%>"><%=emoji.display_name%></option>
                <% end %>
              </select>
            </div>
          </div>
          <div class="flex flex-col lg:flex-row text-center space-x-4">
            <div class="">
              Paste score here üëá
              <textarea rows=8 class="block w-36 resize-none mx-auto text-center border border-gray-300 rounded-lg" data-theme-generator-target="input" data-action="theme-generator#change"></textarea>
            </div>
            <div class="">
              Themed Score
              <textarea rows=8 readonly class="block w-36 resize-none mx-auto text-center border border-gray-300 rounded-lg" data-theme-generator-target="output"></textarea>
            </div>
          </div>
        </div>
      </div>
    </body>
  </html>
